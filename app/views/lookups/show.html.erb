<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl text-blue-500"><a href="/">WeatherBear</a></h1>
  <p class="italic">Just the bare essentials of a daily forecast</p>
  <hr>

  <div class="mx-auto my-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>

  <%= render @lookup %>

  <div class="mt-16">
    <p class="font-bold text-right">Hans (the bear) says:</p>
    <p class="text-right" data-controller="punchline"></p>
    <img class="mt-4 float-right" src="/assets/hans-the-bear.jpg" />
  </div>
</div>
